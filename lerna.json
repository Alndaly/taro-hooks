{
  "packages": ["packages/taro-hooks"],
  "command": {
    "version": {
      "allowBranch": "main",
      "includeMergedTags": true,
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "message": "chore(release): publish %s"
    }
  },
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/*.md",
    "**/es/*",
    "**/lib/*",
    "**/dist/*",
    "app/*",
    "father-build/*",
    "taro-runtime/*"
  ],
  "version": "1.0.0",
  "tagVersionPrefix": "taro-hooks-v",
  "npmClient": "yarn"
}
