{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "website"
  ],
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn build:shared && yarn bootstrap:plugin && yarn build:sandpack && yarn bootstrap:request",
    "bootstrap:plugin": "yarn build:react-plugin && yarn build:vue-plugin && yarn build:docusaurus",
    "bootstrap:request": "yarn build:ahooks && yarn build:use-request",
    "build": "lerna run build --no-private --stream",
    "clean": "lerna clean --yes && rm -rf .yarn/cache && rm -rf yarn.lock",
    "clean-modules": "rm -rf packages/*/node_modules && rm -rf packages/*/package-lock.json && rm -rf website/node_modules && rm -rf examples/*/node_modules",
    "docusaurus:start": "lerna run start --scope=@taro-hooks/website --stream",
    "docusaurus:build": "lerna run build --scope=@taro-hooks/website --stream",
    "docusaurus:build:gh": "cross-env BUILD_TARGET=GH yarn docusaurus:build",
    "build:demos": "yarn build:vue-demo && yarn build:react-demo",
    "docs:build": "yarn bootstrap && yarn docusaurus:build && yarn build:demos && yarn generate-docs",
    "docs:build:gh": "cross-env BUILD_TARGET=GH yarn docs:build",
    "docs:deploy": "gh-pages -d website/build",
    "generate-template": "TS_NODE_PROJECT=scripts/tsconfig.json node -r ts-node/register scripts/generate-templ.ts",
    "generate-docs": "node scripts/build-docs.mjs",
    "generate-hooks-category": "node scripts/generate-hooks-category.mjs",
    "app:dev": "cd ./packages/app && npm run dev:weapp",
    "app:dev:h5": "cd ./packages/app && npm run dev:h5",
    "app:build:h5": "cd ./packages/app && npm run build:h5",
    "app:build": "lerna run build:weapp --scope=@taro-hooks/example --stream",
    "app:build:examine": "lerna run build:weapp:examine --scope=@taro-hooks/example --stream",
    "develop:react-plugin": "lerna run dev:h5 --scope=@taro-hooks/taro-hooks-plugin --stream",
    "build:react-demo": "lerna run build:h5 --scope=@taro-hooks/taro-hooks-plugin --stream",
    "develop:react-plugin:weapp": "lerna run dev:weapp --scope=@taro-hooks/taro-hooks-plugin --stream",
    "dev:react-plugin": "lerna run dev --scope=@taro-hooks/plugin-react --stream",
    "build:react-plugin": "lerna run build --scope=@taro-hooks/plugin-react --stream",
    "develop:sandpack": "lerna run dev --scope=@taro-hooks/sandpack --stream",
    "build:sandpack": "lerna run build --scope=@taro-hooks/sandpack --stream",
    "develop:docusaurus": "lerna run dev --scope=@taro-hooks/plugin-docusaurus --stream",
    "build:docusaurus": "lerna run build --scope=@taro-hooks/plugin-docusaurus --stream",
    "build:use-request": "lerna run build --scope=@taro-hooks/use-request --stream",
    "dev:use-request": "lerna run dev --scope=@taro-hooks/use-request --stream",
    "build:ahooks": "lerna run build --scope=@taro-hooks/ahooks --stream",
    "dev:ahooks": "lerna run dev --scope=@taro-hooks/ahooks --stream",
    "build:hooks": "lerna run build --scope=taro-hooks --stream",
    "dev:hooks": "lerna run dev:ts --scope=taro-hooks --stream",
    "develop:vue-plugin": "lerna run dev:h5 --scope=@taro-hooks/taro-hooks-plugin-vue --stream",
    "build:vue-demo": "lerna run build:h5 --scope=@taro-hooks/taro-hooks-plugin-vue --stream",
    "develop:vue-plugin:weapp": "lerna run dev:weapp --scope=@taro-hooks/taro-hooks-plugin-vue --stream",
    "dev:vue-plugin": "lerna run dev --scope=@taro-hooks/plugin-vue --stream",
    "build:vue-plugin": "lerna run build --scope=@taro-hooks/plugin-vue --stream",
    "dev:shared": "lerna run dev --scope=@taro-hooks/shared --stream",
    "build:shared": "lerna run build --scope=@taro-hooks/shared --stream",
    "deploy": "yarn docusaurus:build && yarn docs:deploy",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "lerna:publish": "lerna publish --no-private",
    "lerna:publish:major": "lerna publish major --no-private",
    "lerna:publish:minor": "lerna publish minor --no-private",
    "lerna:publish:patch": "lerna publish patch --no-private",
    "lerna:publish:beta:major": "lerna publish --canary major --preid beta-serro --no-private",
    "lerna:publish:beta": "lerna publish --canary --preid beta-serro --no-private",
    "log": "./node_modules/.bin/conventional-changelog -i CHANGELOG.md -s -r 0",
    "postversion": "npm run log",
    "contributors:generate": "all-contributors generate",
    "upgrade-yarn": "yarn policies set-version stable"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.6",
    "base-64": "^1.0.0",
    "lodash": "^4.17.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "taro-runtime-docs": "^3.3.14"
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/mockjs": "^1.0.6",
    "@types/react": "^17.0.2",
    "all-contributors-cli": "^6.20.0",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-transform-async-to-promises": "^0.8.18",
    "babel-preset-taro": "^3.4.8",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "del": "^6.1.1",
    "fast-glob": "^3.2.11",
    "father-build-offline": "^1.20.4",
    "fs-extra": "^10.1.0",
    "gh-pages": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-less": "^5.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "js-yaml": "^4.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.7",
    "new-github-release-url": "^1.0.0",
    "postcss-pxtorem": "5.1.1",
    "postcss-pxtransform": "^3.2.13",
    "prettier": "^2.2.1",
    "remark-frontmatter": "^4.0.1",
    "rollup": "^2.72.0",
    "rollup-plugin-node-externals": "^4.0.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "yorkie": "^2.0.0",
    "zx": "^6.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=3.0.0"
  },
  "repository": {
    "branch": "main",
    "platform": "github",
    "url": "git@github.com:innocces/taro-hooks.git",
    "type": "git"
  },
  "authors": [
    "innocces <jiangjiangjiangxi@gmail.com> (https://github.com/innocces)"
  ],
  "packageManager": "yarn@3.2.1"
}
